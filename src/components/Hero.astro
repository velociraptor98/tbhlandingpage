---
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";
const images = import.meta.glob<{ default: ImageMetadata }>(
    "/src/assets/*.{jpeg,jpg,png,gif,svg}",
);
---

<section class="py-20 flex md:flex-row flex-col px-4 md:px-0 gap-10 md:gap-0">
    <div class="flex flex-col gap-6 justify-start items-start md:w-1/2">
        <p class="text-6xl font-bold">
            Welcome to TBH: Total Business Hotties!
        </p>
        <p>
            A powerhouse community where women from all walks of life—corporate
            girlies, entrepreneurial trailblazers, and ambitious go-getters—come
            together to network, uplift, and slay!
        </p>
        <a
            rel="noopener noreferrer"
            href="https://forms.gle/HxDtdNSVGku1wPip9"
            target="_blank"
            class="bg-pgreen px-5 py-3 border-1 border-black rounded-lg shadow-card hover:shadow-hover transition"
        >
            Join Us !
        </a>
    </div>
    <div
        class="md:w-1/2 object-contain flex items-center justify-center p-10 group"
    >
        <a
            rel="noopener noreferrer"
            href="https://www.instagram.com/totalbusinesshotties/"
            target="_blank"
        >
            <div
                class="bg-pblue border-3 border-black rounded-2xl h-52 w-60 shadow-card group-hover:shadow-hover flex transition relative"
            >
                <div
                    class="absolute text-nowrap flex items-center gap-4 -bottom-12 right-0 bg-pgreen z-10 shadow-card1 group-hover:shadow-card transition rounded-full border-3 border-black"
                >
                    <p class="ml-2 mr-2">TOTAL BUSINESS HOTTIES</p>
                </div>
                <div
                    class="h-80 w-60 overflow-hidden relative -mt-30 rounded-2xl"
                >
                    <Image
                        class="object-bottom absolute bottom-0 group-hover:scale-105 transition rounded-2xl h-52"
                        src={images["/src/assets/hero.jpeg"]()}
                        alt="logo, hero"
                    />
                </div>
            </div></a
        >
    </div>
</section>
